<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_select_recyclerView_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/item_select_recyclerView_cardView_radius"
    app:cardElevation="@dimen/item_select_recyclerView_cardView_shadow">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_select_recyclerView_cardView_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/item_select_recyclerView_imageView_padding"
            android:paddingRight="@dimen/item_select_recyclerView_imageView_padding"
            android:paddingTop="@dimen/item_select_recyclerView_imageView_padding"
            app:layout_constraintBottom_toTopOf="@+id/item_select_recyclerView_cardView_textView"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_select_recyclerView_cardView_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/item_select_recyclerView_textView_padding"
            android:text="NAME"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
