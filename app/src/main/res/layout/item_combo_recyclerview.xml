<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/item_combo_recylcerView_recyclerView_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_combo_recyclerView_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="@dimen/item_combo_recylcerView_textView_title_padding"
            android:text="starter"
            android:textColor="@color/white"
            android:textSize="@dimen/item_combo_recylcerView_textView_title_text_size" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_combo_recyclerView_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_combo_recylcerView_recyclerView_padding">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v7.widget.CardView>
