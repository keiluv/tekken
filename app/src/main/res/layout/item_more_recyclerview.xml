<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/item_patchnote_recyclerView_layout_padding">

        <TextView
            android:id="@+id/item_patchNote_recyclerView_textView_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="version"
            android:textColor="@color/textColor"
            android:textSize="@dimen/item_patchnote_recyclerView_textView_version_text_size" />

        <TextView
            android:id="@+id/item_patchNote_recyclerView_textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="date"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/item_patchnote_recyclerView_textView_date_text_size" />

    </LinearLayout>

</android.support.v7.widget.CardView>
